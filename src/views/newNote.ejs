<form action="/dashboard/note/create" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="title" class="form-control" name="title">
    </div>
    <div class="form-group">
      <label for="body">Body</label>
      <textarea type="body" class="form-control" name="body"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Submit note</button>
    <button type="reset" class="btn btn-info">Reset</button>
    <a class="btn btn-danger" role="button" href="/dashboard">Cancel</a>
  </form>